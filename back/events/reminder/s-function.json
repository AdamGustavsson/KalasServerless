{
  "name": "reminder",
  "runtime": "nodejs4.3",
  "description": "sends reminders to users",
  "customName": false,
  "customRole": false,
  "handler": "events/reminder/handler.handler",
  "timeout": 6,
  "memorySize": 1024,
  "authorizer": {},
  "custom": {
    "excludePatterns": []
  },
  "endpoints": [],
  "events": [
    {
      "name" : "reminderSource",
      "type": "schedule",
      "config": {
         "schedule": "cron(0 17 * * ? *)",
          "enabled": true
      }
    }
  ],
  "environment": {
    "SERVERLESS_PROJECT": "${project}",
    "SERVERLESS_STAGE": "${stage}",
    "SERVERLESS_REGION": "${region}",
    "SMS_GATEWAY_DEVICE_ID": "${SMSGatewayDeviceId}",
    "SMS_GATEWAY_TOKEN": "${SMSGatewayToken}"
  },
  "vpc": {
    "securityGroupIds": [],
    "subnetIds": []
  }
}
